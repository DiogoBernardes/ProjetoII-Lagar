<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="PROJECT_II_LAGAR">

        <provider> org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>IPVC.DAL.CodigoPostal</class>
        <class>IPVC.DAL.Entidade</class>
        <class>IPVC.DAL.Fatura</class>
        <class>IPVC.DAL.TipoProduto</class>
        <class>IPVC.DAL.Produto</class>
        <class>IPVC.DAL.TipoEntidade</class>
        <class>IPVC.DAL.TipoUtilizador</class>
        <class>IPVC.DAL.Utilizador</class>
        <class>IPVC.DAL.TipoPagamento</class>
        <class>IPVC.DAL.Recibo</class>
        <class>IPVC.DAL.LinhaRecibo</class>
        <class>IPVC.DAL.LinhaFatura</class>
        <class>IPVC.DAL.Embalamento</class>
        <class>IPVC.DAL.ProdutoEMB</class>
        <class>IPVC.DAL.Producao</class>
        <class>IPVC.DAL.ProdutoMP</class>

        <properties>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/Lagar"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="123456"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>
        </properties>
    </persistence-unit>
</persistence>
